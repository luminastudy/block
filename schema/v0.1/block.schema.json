{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/luminastudy/block/main/schema/v0.1/block.schema.json",
  "title": "Block",
  "description": "Schema for a Lumina Study block object (v0.1)",
  "version": "0.1",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the block"
    },
    "title": {
      "type": "object",
      "properties": {
        "he_text": {
          "type": "string",
          "description": "Hebrew text for the title"
        },
        "en_text": {
          "type": "string",
          "description": "English text for the title"
        }
      },
      "required": ["he_text", "en_text"],
      "additionalProperties": false
    },
    "prerequisites": {
      "type": "array",
      "description": "Array of prerequisite block IDs",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    },
    "parents": {
      "type": "array",
      "description": "Array of parent block IDs",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    }
  },
  "required": ["id", "title", "prerequisites", "parents"],
  "additionalProperties": true
}
